<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/buttonFetchTopSongs"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Fetch Top Songs"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:background="@drawable/button_style"
    android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/buttonViewHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View History"
        android:layout_below="@id/buttonFetchTopSongs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/buttonRequestNewToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request New Token"
        android:layout_below="@id/buttonViewHistory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_below="@id/buttonRequestNewToken"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"/>
    <Button
        android:id="@+id/buttonEditAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Account Information"
        android:layout_below="@id/buttonLogout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"/>

</RelativeLayout>
